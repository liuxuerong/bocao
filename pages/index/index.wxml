    <view class="weui-cells weui-cells_after-title">
      <image src='../../images/icon/icon-location.png'></image>
      <navigator url="../switchcity/switchcity" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd">工作城市</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">{{location}}</view>
        <input type='hidden' class='inputHid' name="location" value="{{location}}"></input>
