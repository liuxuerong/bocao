        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入您的姓名" name="userName" placeholder-style="font-size:16px" />
        </view>
      </view>
    </view>
    <view class="btn-area">
      <button formType="submit" type='primary' class='weui-btn'>去拿钱</button>
    </view>

  </form>
</view>

